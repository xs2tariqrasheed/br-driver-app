{
  "expo": {
    "name": "br-driver-app",
    "slug": "br-driver-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "brdriverapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.saadforeaims.brdriverapp",
      "infoPlist": {
        "NSFaceIDUsageDescription": "We use Face ID to help you sign in securely.",
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "Your location is needed to find and navigate to jobs nearby.",
        "NSUserTrackingUsageDescription": "We use notifications to alert you for incoming jobs and updates."
      },
      "config": {
        "googleMapsApiKey": "AIzaSyDXb5djCy2217thBLl785mPmds2_qudYC8"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.saadforeaims.brdriverapp",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "POST_NOTIFICATIONS"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDXb5djCy2217thBLl785mPmds2_qudYC8"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/black-bell-icon.png",
          "color": "#007A7A"
        }
      ],
      [
        "react-native-maps",
        {
          "googleMapsApiKey": "AIzaSyDXb5djCy2217thBLl785mPmds2_qudYC8"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "fe6aec50-b8f5-4ea3-a9e5-6151b4c06c75"
      }
    },
    "owner": "mujahidforeaims"
  }
}
